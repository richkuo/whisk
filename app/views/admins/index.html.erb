<p id="notice"><%= notice %></p>

<h1>Your Companies</h1>

<p><%= link_to 'Add Company', new_company_path %></p>

<div class="row">
  <div class="col-md-6">
    <% @companies.each do |company| %>
      <a href="<%= company_url(company) %>" class="card mb-5 shadow-sm" style="text-decoration: none">
        <div class="card-body d-flex align-items-start">
          <div class="col-md-9">
            <h3><%= company.name %></h3>

            <p class="text-muted">
              Additional company notes/updates/etc
            </p>
          </div>

          <div class="col-md-3 text-muted">
            Alerts?
            <br>
            Stats?
            <br>
            Actions?
            <br>
          </div>
        </div>
      </a>
    <% end %>
  </div>

  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-body d-flex flex-column align-items-start">
        quick view content can be shown here on mouse over or click
      </div>
    </div>
  </div>
</div>
