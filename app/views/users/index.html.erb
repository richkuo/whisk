<p id="notice"><%= notice %></p>

<div class="row">
  <nav class="col-md-2 d-none d-md-block bg-light sidebar">
    <div class="sidebar-sticky">
      <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
        <a class="nav-link active" id="v-pills-paystubs-tab" data-toggle="pill" href="#v-pills-paystubs" role="tab" aria-controls="v-pills-paystubs" aria-selected="true">
          Paystubs
        </a>

        <a class="nav-link" id="v-pills-addresses-tab" data-toggle="pill" href="#v-pills-addresses" role="tab" aria-controls="v-pills-addresses" aria-selected="false">
