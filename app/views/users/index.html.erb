<p id="notice"><%= notice %></p>

<div class="row">
  <nav class="col-md-2 d-none d-md-block bg-light sidebar">
    <div class="sidebar-sticky">
      <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
        <a class="nav-link active" id="v-pills-paystubs-tab" data-toggle="pill" href="#v-pills-paystubs" role="tab" aria-controls="v-pills-paystubs" aria-selected="true">
          Paystubs
        </a>

        <a class="nav-link" id="v-pills-addresses-tab" data-toggle="pill" href="#v-pills-addresses" role="tab" aria-controls="v-pills-addresses" aria-selected="false">
          Addresses
        </a>

        <a class="nav-link" id="v-pills-employers-tab" data-toggle="pill" href="#v-pills-employers" role="tab" aria-controls="v-pills-employers" aria-selected="false">
          Employers
        </a>

        <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false">
          Settings
        </a>
      </div>
    </div>
  </nav>

  <main role="main" class="col-md-10 px-4">
    <div class="tab-content" id="v-pills-tabContent">
      <div class="tab-pane fade show active" id="v-pills-paystubs" role="tabpanel" aria-labelledby="v-pills-paystubs-tab">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center">
          <h2>Your Payments</h2>

          <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
              <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Share</button> -->
              <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
            </div>

            <!-- <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
              <span data-feather="calendar"></span>
              This week
            </button> -->
          </div>
        </div>

        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <th>Admin</th>
              <th>Company</th>
              <th>Notes</th>
              <th>Batch number</th>
              <th>Pay period</th>
              <th colspan="3"></th>
            </thead>
            <tbody>
              <% @payrolls.each do |payroll| %>
                <tr>
                  <td><%= payroll.admin_id %></td>
                  <td><%= payroll.company_id %></td>
                  <td><%= payroll.notes %></td>
                  <td><%= payroll.batch_number %></td>
                  <td><%= payroll.pay_period %></td>
                  <td><%= link_to 'Show', payroll %></td>
                  <td><%= link_to 'Edit', edit_payroll_path(payroll) %></td>
                  <td><%= link_to 'Destroy', payroll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="tab-pane fade" id="v-pills-addresses" role="tabpanel" aria-labelledby="v-pills-addresses-tab">
        <h2>Your Addresses</h2>

        <p><%= link_to 'Create new account', new_user_account_path(current_user) %></p>

        <% @accounts.each do |account| %>
          <a href="<%= user_account_url(current_user, account) %>" class="card mb-5 shadow-sm" style="text-decoration: none">
            <div class="card-body d-flex align-items-start">
              <div class="col-md-6">
                <p>Address: <%= account.address %></p>
                <p>Currency: Eth</p>

                <!-- <p>notes: <%= account.notes %></p>
                <p>id: <%= account.id %></p>
                <p>confirmed_at: <%= account.confirmed_at %></p>
                <p>confirmation_sent_at: <%= account.confirmation_sent_at %></p>
                <p>accountable_type: <%= account.accountable_type %></p>
                <p>accountable_id: <%= account.accountable_id %></p>
                <p>created_at: <%= account.created_at %></p>
                <p>updated_at: <%= account.updated_at %></p> -->
              </div>

              <div class="col-md-6">
                <!-- last 3 transactions go here -->
              </div>
            </div>
          </a>
        <% end %>
      </div>

      <div class="tab-pane fade" id="v-pills-employers" role="tabpanel" aria-labelledby="v-pills-employers-tab">
        <% @companies.each do |company| %>
          <a href="<%= company_url(company) %>" class="card mb-5 shadow-sm" style="text-decoration: none">
            <div class="card-body d-flex align-items-start">
              <div class="col-md-9">
                <h3><%= company.name %></h3>

                <p class="text-muted">
                  <!-- Number of employees: <%= company.users.count %> -->
                  <br>
                  <!-- Number of accounts: <%= company.accounts.count %> -->
                  <!-- <br> -->
                  <!-- Additional company notes/updates/etc -->
                </p>
              </div>

              <div class="col-md-3 text-muted">
                <!-- Alerts?
                <br>
                Stats?
                <br>
                Actions?
                <br> -->
              </div>
            </div>
          </a>
        <% end %>
      </div>

      <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">
        <p><%= link_to 'Settings', edit_user_path(@user) %></p>
      </div>
    </div>
  </main>
</div>
